---
import "../assets/css/tailwind.css";
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Meta from "../components/Meta.astro";

export interface Props {
	title: string;
	tagTitle?: string;
	description: string;
	slug: string;
	published_at?: Date;
	updated_at?: Date;
	wordsCount?: number;
	image?: string | undefined;
	type?: "website" | "article";
}

const {
	title,
	tagTitle,
	description,
	slug,
	published_at,
	updated_at,
	wordsCount,
	type = "website",
} = Astro.props;
---

<html lang="en">
	<head>
		<Meta
			title={title}
			tagTitle={tagTitle ?? ""}
			description={description}
			slug={slug}
			published_at={published_at ?? new Date()}
			updated_at={updated_at ?? new Date()}
			wordsCount={wordsCount}
			type={type}
		/>
	</head>
	<body class="bg-black/80 text-zinc-100 antialiased">
		<div class="flex flex-col justify-between">
			<Header />
			<Nav />
			<section
				class="container mx-auto flex max-w-screen-sm gap-4 flex-col py-8 px-4 print:my-0 print:items-center print:justify-center print:py-0 print:px-0"
			>
				<slot />
			</section>
			<Footer />
		</div>
	</body>
</html>
