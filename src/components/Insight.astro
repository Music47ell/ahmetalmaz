---
const token = import.meta.env.PUBLIC_INSIGHT_TOKEN
---

<script define:vars={{ token }} is:inline>
	fetch("https://api.ahmetalmaz.com/correct-horse-battery-staple", {
		method: "POST",
		headers: {
			Authorization: token,
			"Content-Type": "application/json",
		},
		body: JSON.stringify({
			title: document.title,
			slug: window.location.pathname,
			referrer: document.referrer || "Direct Traffic",
		}),
		keepalive: true,
	});
</script>